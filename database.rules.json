{
  "rules": {
    ".read": true,
    ".write": "auth != null",
    "boxes": {
      ".indexOn": ["status", "category", "sellerId", "createdAt"]
    },
    "orders": {
      ".indexOn": ["buyerId", "sellerId", "status", "createdAt"]
    },
    "addresses": {
      ".indexOn": ["userId", "createdAt"]
    },
    "users": {
      ".indexOn": ["email", "username", "isVerified"]
    },
    "conversations": {
      ".indexOn": ["lastMessageAt"],
      "$conversationId": {
        "participants": {
          ".indexOn": ".key"
        }
      }
    },
    "notifications": {
      ".indexOn": ["userId", "isRead", "createdAt"]
    },
    "reports": {
      ".indexOn": ["status", "createdAt"]
    },
    "seller_requests": {
      ".indexOn": ["userId", "status", "createdAt"]
    },
    "verification_requests": {
      ".indexOn": ["userId", "status", "createdAt"]
    },
    "messages": {
      ".indexOn": ["conversationId", "senderId", "createdAt"]
    },
    "admin_messages": {
      ".indexOn": ["userId", "status", "createdAt"]
    },
    "donations": {
      ".indexOn": ["userId", "createdAt"]
    },
    "comments": {
      ".indexOn": ["boxId", "userId", "createdAt"]
    }
  }
}
